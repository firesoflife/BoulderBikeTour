<p id="notice"><%= notice %></p>

<h1>Racers</h1>

<table>
  <thead>
    <tr>
      <th>F name</th>
      <th>L name</th>
      <th>City</th>
      <th>State</th>
      <th>Lat</th>
      <th>Lng</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @racers.each do |racer| %>
      <tr>
        <td><%= racer.f_name %></td>
        <td><%= racer.l_name %></td>
        <td><%= racer.city %></td>
        <td><%= racer.state %></td>
        <td><%= racer.lat %></td>
        <td><%= racer.lng %></td>
        <td><%= link_to 'Show', racer %></td>
        <td><%= link_to 'Edit', edit_racer_path(racer) %></td>
        <td><%= link_to 'Destroy', racer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

